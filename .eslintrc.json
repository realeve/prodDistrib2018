{
    "extends": "standard",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": ["html", "standard"],
    "rules": {
        "indent": [0, 4, { "SwitchCase": 1 }],
        "quotes": ["off", "single"],
        "semi": ["error", "always"],
        "no-console": ["error"],
        "no-empty": 2,
        "no-eq-null": 2,
        "no-new": 0,
        "no-fallthrough": 0,
        "no-unreachable": 0,
        "eol-last": 0,
        "space-before-function-paren": 0,
        "no-multi-str": ["off"]
    }
}